{
  "name": "pitlords",
  "version": "1.0.0",
  "description": "Pitlords Live Site",
  "repository": "https://github.com/pitlords/site",
  "author": "Uriah Galang <ceo@goldcoders.dev>",
  "license": "MIT",
  "scripts": {
    "tw-dev": "cross-env AILWIND_MODE=watch NODE_ENV=development postcss ./assets/css/main.css -c ./assets/css/tailwind.config.js -o ./assets/css/tailwind.css -w",
    "hugo-dev": "hugo server  --disableFastRender",
    "tw-build": "cross-env TAILWIND_MODE=build NODE_ENV=production postcss ./assets/css/main.css -o ./assets/css/tailwind.css",
    "hugo-build": "hugo --gc --minify",
    "esbuild-js": "cross-env NODE_ENV=production node --require dotenv/config ./esbuild.js",
    "netlify-dev": "netlify dev",
    "lambda-serve": "netlify-lambda serve lambda",
    "lambda-build": "netlify-lambda build lambda",
    "postinstall": "netlify-lambda install",
    "lambda": "netlify-lambda",
    "cms-dev": "snowpack dev",
    "local-server": "netlify-cms-proxy-server",
    "cms-git": "cross-env MODE=git netlify-cms-proxy-server",
    "dev": "run-p tw-dev cms-dev local-server netlify-dev",
    "cms": "run-p hugo-dev tw-dev cms-dev local-server",
    "local": "run-p hugo-dev tw-dev cms-git local-server",
    "build": "run-p tw-build hugo-build esbuild-js",
    "watch": "run-p tw-dev hugo-dev"
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^4.0.3",
    "@tailwindcss/aspect-ratio": "^0.2.1",
    "@tailwindcss/forms": "^0.3.3",
    "@tailwindcss/typography": "^0.4.1",
    "autoprefixer": "^10.2.6",
    "postcss": "^8.3.0",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.2",
    "prettier": "^2.3.1",
    "tailwindcss": "^2.1.4"
  },
  "devDependencies": {
    "@snowpack/plugin-dotenv": "^2.1.0",
    "@snowpack/plugin-typescript": "^1.2.1",
    "@types/node": "^15.12.2",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "esbuild": "^0.12.8",
    "netlify-cli": "^3.35.0",
    "netlify-cms": "^2.10.137",
    "netlify-cms-proxy-server": "^1.3.18",
    "netlify-lambda": "^2.0.8",
    "npm-run-all": "^4.1.5",
    "snowpack": "^3.5.6",
    "typescript": "^4.3.2"
  },
  "browserslist": [
    "last 1 version",
    "> 1%",
    "maintained node versions",
    "not dead"
  ]
}
